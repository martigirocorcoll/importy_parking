
<%= simple_form_for(@car) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :entry_time, html5: true %>
    <%= f.input :out_time, html5: true, include_blank: true %>
    <%# , input_html: { value: f.object.entry_time.presence || Date.today.to_s } %>
  </div>

  <div class="form-actions text-center">
    <%= f.button :submit, class:"btn btn-primary mt-3 mb-5" %>
  </div>
<% end %>
